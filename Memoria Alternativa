#include <stdio.h>
#include <stdlib.h>
#include <malloc.h>
#include <locale.h>
#include <string.h>
#define N 30

typedef struct {
    char nombre[N];
    char apellido[N];
    char correo[N];
    char departamento[N];
    char despacho[N];

}Usuario;
void CargarUsuario(Usuario* usuario);
void Nuevo_Usuario(Usuario* k);

int main(void) {
    setlocale(LC_ALL, "es-ES");
    int opcion;
    int menu2;
    Usuario* v_usuario;
    do {
        printf("--------------------\n");
        printf("--> Introduzca una opción: \n");
        printf("1. Nuevo Usuario\n");
        printf("2. Listado del profesorado\n");
        printf("3. Salir");

        printf("\nIntroduzca la opción deseada: \n");
        scanf_s("%d", &opcion);

        switch (opcion) {

        case 1:
            v_usuario = (Usuario*)malloc(sizeof(Usuario));
            CargarUsuario(v_usuario);
            break;
        case 2:
        {
            // Se muestra el listado de los profesores
        }
        break;
        case 3:
            break;
        default:
            printf("Esa opción no esta en el menu\n");
        }
    } while (opcion != 3);
    return 0;
}
void CargarUsuario(Usuario* usuario) {
    int i;
    printf("Se va a proceder a la carga de la estructura del usuario: \n");
    Nuevo_Usuario(usuario);
    return;
}
   
   
void Nuevo_Usuario(Usuario* k) {
    printf("\nNombre: ");
    getchar();
    fgets(k->nombre, N, stdin);
    //gets_s(j->nombre);
    printf("Apellido: ");
    getchar();
    fgets(k->apellido, N, stdin);
    //gets_s(j->apellido);
    printf("Correo: ");
    getchar();
    fgets(k->correo, N, stdin);
    printf("Departamento: ");
    getchar();
    fgets(k->departamento, N, stdin);
    printf("Despacho: ");
    getchar();
    fgets(k->despacho, N, stdin);
    return;
}
